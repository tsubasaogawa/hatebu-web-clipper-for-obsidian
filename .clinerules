{
    "rules": [
        {
            "name": "Run",
            "description": "Run the main Python script.",
            "pattern": "main.py",
            "command": "python main.py"
        },
        {
            "name": "Lint",
            "description": "Lint the Python code with pylint.",
            "pattern": "**/*.py",
            "command": "pylint ${file}"
        },
        {
            "name": "Test",
            "description": "Run tests with unittest.",
            "pattern": "test_*.py",
            "command": "bash -c 'PACKAGES=$(grep -A 5 \"dependencies =\" main.py | grep -o \"\\\".*\\\"\" | sed \"s/\\\"//g\" | sed \"s/.*/--with &/\" | tr \"\\n\" \" \"); uv tool run $PACKAGES -- python -m unittest \"${file}\"'"
        }
    ]
}